@* @model SecondProj.Models.CardUpdateVM; *@
@{
    ViewData["Title"] = "CartList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model IEnumerable<Cart>
@{
    decimal subtotal = Model.Sum(c => c.Tprice);
    decimal total = subtotal; // Add tax/shipping if needed
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="User" asp-action="Index">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="/uploads/products/@item.Product.Image" alt="">
                                        <h5>@item.Product.ProductName</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        $@item.Product.Price
                                    </td>
                                     @* <!-- Quantity Input --> *@
                                    <td class="shoping__cart__quantity">
                                        <input type="number"
                                               min="1"
                                               class="qty-input"
                                               value="@item.Quantity"
                                               data-id="@item.Id"
                                               data-price="@item.Product.Price" />
                                    </td>

                                  
                                    

                                    @* <td class="shoping__cart__quantity">
                                        <form asp-action="UpdateCart" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" name="qty" value="@(item.Quantity - 1)">−</button>
                                            <span class="mx-2">@item.Quantity</span>
                                            <button type="submit" name="qty" value="@(item.Quantity + 1)">+</button>
                                        </form>
                                    </td> *@

                                    <!-- Row Total -->
                                    <td class="shoping__cart__total" id="row-@item.Id">
                                        $@(item.Product.Price* item.Quantity)
                                    </td>
                                    
                                    <td class="shoping__cart__item__close">
                                        <a asp-action="Remove"
                                           asp-route-id="@item.Id">
                                            <span class="icon_close"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Product" asp-action="Index" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Update Cart
                    </a> <!-- Implement JS for update if needed -->
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                         <li>Subtotal <span id="subtotal">$@subtotal</span></li>
                        <li>Total <span id="total">$@total</span></li>
                    </ul>
                    <a asp-action="Checkout" asp-controller="Cart" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // Target all quantity inputs
    document.querySelectorAll('.qty-input').forEach(input => {

        // Listen to change (user types or + / - button changes)
        input.addEventListener('change', function() {

            // Get values
            let qty = parseInt(this.value);
            if (isNaN(qty) || qty < 1) {
                this.value = 1; // minimum 1
                qty = 1;
            }

            let price = parseFloat(this.dataset.price);
            let id = this.dataset.id;

            // 1️⃣ Update row total on UI
            let rowTotalElement = document.getElementById('row-' + id);
            if(rowTotalElement){
                rowTotalElement.innerText = (qty * price).toFixed(2);
            }

            // 2️⃣ Update subtotal & total
            let subtotal = 0;
            document.querySelectorAll('.qty-input').forEach(i => {
                subtotal += i.value * i.dataset.price;
            });

            document.getElementById('subtotal').innerText = subtotal.toFixed(2);
            document.getElementById('total').innerText = subtotal.toFixed(2);

            // 3️⃣ Send quantity to database (AJAX)
            fetch('/Cart/UpdateCart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    cartId: id,
                    qty: qty
                })
            });
        });
    });
</script>
