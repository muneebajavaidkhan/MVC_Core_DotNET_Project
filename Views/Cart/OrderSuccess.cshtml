
@{
    ViewData["Title"] = "OrderSuccess";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<section class="checkout spad" style="min-height: 60vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <!-- Success Icon -->
                <div style="font-size: 80px; color: #27ae60; margin-bottom: 20px;">
                    <i class="fa fa-check-circle"></i>
                </div>

                <!-- Heading -->
                <h2 style="font-weight: 700; margin-bottom: 20px; color: #333;">Thank You!</h2>

                <!-- Message -->
                <p style="font-size: 18px; color: #555; margin-bottom: 30px;">
                    Your order has been placed successfully. We will contact you soon regarding the delivery.
                </p>

                <!-- Continue Shopping Button -->
                <a href="/User/Index" class="site-btn" style="padding: 12px 40px; font-size: 16px;">
                    Continue Shopping
                </a>
            </div>
        </div>
    </div>
</section>


